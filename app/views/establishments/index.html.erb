<%= display_notice %>
<%= display_alert %>

<%= render "auth/authentication" %>

<section id="establishments-index" class="section">
  <%= link_to t('.new_establishment'), new_establishment_path, id: "new_establishment_button", class: 'small_yellow_button' %>
  <h1 class="establishments-title-section"><%= t('.establishments') %></h1>

  <table class="pure-table pure-table-striped">
    <thead>
      <tr>
        <th style="width: 10px;">#</th>
        <th style="width: 200px;"><%= I18n.t :created_at, scope: [:table_headers] %></th>
        <th style="width: 300px;"><%= I18n.t :name, scope: [:table_headers] %></th>
        <th style="width: 300px;"><%= I18n.t :address, scope: [:table_headers] %></th>
        <th style="width: 150px;"><%= I18n.t :phone, scope: [:table_headers] %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "shared/establishment", collection: @establishments, as: :establishment %>
    </tbody>
  </table>
</section>

<script type="text/javascript">
  document.addEventListener('page:load', function(){
    new App.Utilities.HeaderAndFooter();
  });

  $(function(){
    new App.Utilities.HeaderAndFooter();
  });
</script>
