<div id="table-orders">
  <table class="pure-table pure-table-striped">
    <thead>
      <tr>
        <th style="width: 10px;">#</th>
        <th style="width: 200px;"><%= t('.created_at') %></th>
        <th style="width: 300px;"><%= t('.establishment') %></th>
        <th style="width: 100px;"><%= t('.cost') %></th>
        <th style="width: 150px;"><%= t('.time_to_arrive') %></th>
        <th style="width: 100px;"><%= t('.status') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "order", collection: user.orders, as: :order %>
    </tbody>
  </table>
</div>